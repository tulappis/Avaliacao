<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="btnLocalizarOnClick"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/txtID"
        android:layout_width="370dp"
        android:layout_height="39dp"
        android:ems="10"
        android:text="Digite seu IP:"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="35dp" />

    <Button
        android:id="@+id/btnLocalizar"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:onClick="btnLocalizarOnClick"
        android:text="Enviar"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="74dp" />

    <TextView
        android:id="@+id/siglaPais"
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:text="Sigla País: "
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="122dp" />

    <TextView
        android:id="@+id/nomePais"
        android:layout_width="89dp"
        android:layout_height="21dp"
        android:text="País:"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="156dp" />

    <TextView
        android:id="@+id/siglaEstado"
        android:layout_width="89dp"
        android:layout_height="20dp"
        android:text="Sigla Estado:"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="188dp" />

    <TextView
        android:id="@+id/nomeEstado"
        android:layout_width="91dp"
        android:layout_height="19dp"
        android:text="Estado:"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="220dp" />

    <TextView
        android:id="@+id/nomeMunicipio"
        android:layout_width="89dp"
        android:layout_height="19dp"
        android:text="Municipío:"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="253dp" />
</androidx.constraintlayout.widget.ConstraintLayout>